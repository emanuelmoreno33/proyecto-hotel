@model IEnumerable<hotel.Models.Promo>

@{
    ViewBag.Title = "Promociones";
}

<h2>Promociones</h2>

<p>
    <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action( "Create")'">Agregar</button>
</p>
<table class="table">
    <tr>
        <th>
            Nombre de la promoción:
        </th>
        <th>
            Descripción:
        </th>
        <th>
            Fecha de Inicio:
        </th>
        <th>
            Fecha de Terminación:
        </th>
        <th></th>
    </tr>

    @foreach (var promo in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelpromo => promo.promoName)
            </td>
            <td>
                @Html.DisplayFor(modelpromo => promo.description)
            </td>
            <td>
                @promo.startDate.ToString("dd 'de' MMMM 'del' yyyy")
            </td>
            <td>
                @promo.endDate.ToString("dd 'de' MMMM 'del' yyyy")
            </td>
            <td>
                <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action( "Edit", new { id = promo.promoID })'">Editar</button>
                
                <button type="button" class="btn btn-danger" onclick="location.href='@Url.Action( "Delete", new { id = promo.promoID })'">Eliminar</button>
            </td>
        </tr>
    }
</table>