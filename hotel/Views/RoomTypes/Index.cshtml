@model IEnumerable<hotel.Models.RoomType>

@{
    ViewBag.Title = "Index";
}

<h2>Tipo de habitación</h2>

<p>
    <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action( "Create")'">Agregar</button>
</p>
<table class="table">
    <tr>
        <th>
            Tipo:
        </th>
        <th>
            Precio:
        </th>
        <th>
            Capacidad maxima:
        </th>

        <th></th>
    </tr>

    @foreach (var roomType in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelroomType => roomType.typeName)
            </td>
            <td>
                @Html.DisplayFor(modelroomType => roomType.price)
            </td>
            <td>
                @Html.DisplayFor(modelroomType => roomType.capacity)
            </td>
            <td>
                <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action( "Edit", new { id =  roomType.roomTypeID})'">Editar precio</button>
            </td>
        </tr>
    }
</table>