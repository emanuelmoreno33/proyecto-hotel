@model IEnumerable<hotel.Models.RoomType>

@{
    ViewBag.Title = "Index";
}

<h2>Tipo de habitación</h2>

<p>
    @Html.ActionLink("Nueva habitación", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Tipo:
        </th>
        <th>
            Precio:
        </th>
        <th></th>
    </tr>

    @foreach (var roomType in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelroomType => roomType.typeName)
            </td>
            <td>
                @Html.DisplayFor(modelroomType => roomType.price)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = roomType.roomTypeID }) |
                @Html.ActionLink("Details", "Details", new { id = roomType.roomTypeID }) |
                @Html.ActionLink("Delete", "Delete", new { id = roomType.roomTypeID })
            </td>
        </tr>
    }
</table>