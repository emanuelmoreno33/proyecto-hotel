@model IEnumerable<hotel.Models.Employee>

@{
    ViewBag.Title = "Index";
}

<h2>Empleados</h2>

<p>
    @Html.ActionLink("Nuevo Empleado", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Nombre(s):
        </th>
        <th>
            Apellido(s):
        </th>
        <th>
            Fecha de nacimiento:
        </th>
        <th>
            Salario:
        </th>
        <th>
            Usuario:
        </th>
        <th>
            Pais de origen:
        </th>
        <th>
            Ciudad de nacimiento:
        </th>
        <th>
            Departamento:
        </th>
        <th></th>
    </tr>

    @foreach (var employee in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelemployee => employee.name)
            </td>
            <td>
                @Html.DisplayFor(modelemployee => employee.lastName)
            </td>
            <td>
                @employee.DOB.ToString("dd 'de' MMMM 'del' yyyy")
            </td>
            <td>
                @Html.DisplayFor(modelemployee => employee.salary)
            </td>
            <td>
                @Html.DisplayFor(modelemployee => employee.username)
            </td>
            <td>
                @Html.DisplayFor(modelemployee => employee.PlaceOfOrigin1.country)
            </td>
            <td>
                @Html.DisplayFor(modelemployee => employee.City.city1)
            </td>
            <td>
                @Html.DisplayFor(modelemployee => employee.Departament.type)
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = employee.employeeID }) |
                @Html.ActionLink("Details", "Details", new { id = employee.employeeID }) |
                @Html.ActionLink("Delete", "Delete", new { id = employee.employeeID })
            </td>
        </tr>
    }

</table>