@model IEnumerable<hotel.Models.Employee>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Nombre(s)
        </th>
        <th>
            Apellidos
        </th>
        <th>
            Fecha de nacimiento
        </th>
        <th>
            Salario
        </th>
        <th>
            Usuario
        </th>
        <th>
            Pais de origen
        </th>
        <th>
            Ciudad de nacimiento
        </th>
        <th>
            Departamento
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.lastName)
    </td>
    <td>
        @item.DOB.ToString("dd 'de' MMMM 'del' yyyy")
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.salary)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.username)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PlaceOfOrigin1.country)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.City.city1)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Departament.type)
    </td>

    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.employeeID }) |
        @Html.ActionLink("Details", "Details", new { id = item.employeeID }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.employeeID })
    </td>
</tr>
}

</table>
