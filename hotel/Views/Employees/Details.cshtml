@model hotel.Models.Employee

@{
    ViewBag.Title = "Detalles del empleado";
}

    <h2>Detalles del empleado</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nombre(s):
        </dt>

        <dd>
            @Html.DisplayFor(model => model.name)
        </dd>

        <dt>
            Apellido(s):
        </dt>

        <dd>
            @Html.DisplayFor(model => model.lastName)
        </dd>

        <dt>
            Fecha de nacimiento:
        </dt>

        <dd>
            @Model.DOB.ToString("dd 'de' MMMM 'del' yyyy")
        </dd>

        <dt>
            Salario:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.salary)
        </dd>

        <dt>
            Usuario:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.username)
        </dd>

        <dt>
           Departamento:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Departament.type)
        </dd>

        <dt>
            Pais de nacimiento:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PlaceOfOrigin1.country)
        </dd>

        @if (Model.cityID != null)
        {
            <dt>
                Estado:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.City.State.state1)
            </dd>
            <dt>
                Ciudad:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.City.city1)
            </dd>
        }
    </dl>
</div>
<p>
    <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action( "Index")'">Regresar</button>
</p>
