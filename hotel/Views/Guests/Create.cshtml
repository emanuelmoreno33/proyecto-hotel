@model hotel.Models.Guest

@{
    ViewBag.Title = "Agregar Cliente";
}

<h2>Agregar Cliente</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <div class="col-md-10">
                <label>Nombre(s)</label>
                @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
        
            <div class="col-md-10">
                <label>Apellidos</label>
                @Html.EditorFor(model => model.lastName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.lastName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <label>Dirección</label>
                @Html.EditorFor(model => model.address, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.address, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <label>Fecha de nacimiento</label>
                @Html.EditorFor(model => model.DOB, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                @Html.ValidationMessageFor(model => model.DOB, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <label>Sexo</label>
                <br />
                <input class="form-check-input" type="radio" name="sex" id="sex" value="H" checked>
                <label class="form-check-label" for="exampleRadios1">Hombre</label>
                <br />
                <input class="form-check-input" type="radio" name="sex" id="sex" value="M" />
                <label class="form-check-label" for="exampleRadios1">Mujer</label>
                <br />
                <input class="form-check-input" type="radio" name="sex" id="sex" value="O">
                <label class="form-check-label" for="exampleRadios1">Otro</label>

            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <label>Telefono de casa</label>
                @Html.EditorFor(model => model.housePhone, new { htmlAttributes = new { @class = "form-control", @type = "tel", @maxlength = 13, @minlength = 10 } })
                @Html.ValidationMessageFor(model => model.housePhone, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <label>Telefono celular</label>
                @Html.EditorFor(model => model.cellPhone, new { htmlAttributes = new { @class = "form-control", @type = "tel", @maxlength = 13, @minlength = 10 } })
                @Html.ValidationMessageFor(model => model.cellPhone, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <label>Correo Electronico</label>
                @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control", @type = "email" } })
                @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <label>RFC</label>
                @Html.EditorFor(model => model.RFC, new { htmlAttributes = new { @class = "form-control", @maxlength = 13, @minlength = 12 } })
                @Html.ValidationMessageFor(model => model.RFC, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <label>Pais de origen</label>
                @Html.DropDownList("placeOfOrigin", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.placeOfOrigin, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <label>Ciudad de origen (si es mexicano)</label>
                @Html.DropDownList("cityID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.cityID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class=" col-md-10">
                <input type="submit" value="Registrar" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    <button type="button" class="btn btn-dark" onclick="location.href='@Url.Action( "Index")'">Regresar</button>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script>
    $.ready(function () {
        if ($("#placeOfOrigin").val() == "MEX") {
            $("#cityID").prop("disabled", false)
            $("#cityID").val("1")
        }
        else {
            $("#cityID").prop("disabled", true)
            $("#cityID").val(null)
        }
    })
    $("#placeOfOrigin").on("change", function () {
        if ($("#placeOfOrigin").val() == "MEX") {
            $("#cityID").prop("disabled", false)
            $("#cityID").val("1")
        }
        else {
            $("#cityID").prop("disabled", true)
            $("#cityID").val(null)
        }
    })
</script>