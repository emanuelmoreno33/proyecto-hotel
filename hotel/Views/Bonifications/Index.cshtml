@model IEnumerable<hotel.Models.Bonification>

@{
    ViewBag.Title = "Bonificaciones";
}

<h2>Bonificaciones</h2>

<p>
    <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action( "Create")'">Agregar</button>
</p>
<table class="table">
    <tr>
        <th>
            Nombre de empleado:
        </th>
        <th>
            Tipo de bonificación:
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Employee.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TypeOfBonification.typeOfBonificationID)
            </td>
            <td>
                <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action( "Edit", new { id = item.bonificationID })'">Editar</button>
                <button type="button" class="btn btn-danger" onclick="location.href='@Url.Action( "Delete", new { id = item.bonificationID })'">Eliminar</button>
            </td>
        </tr>
    }

</table>