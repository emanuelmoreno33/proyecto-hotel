@model hotel.Models.RoomServicePackage

@{
    ViewBag.Title = "Crear Paquetes de habitación con amenidad ";
}

    <h2>Crear Paquetes de habitación con amenidad</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
       
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        <label class="col-md-2 control-label">
            Paquete de habitacion:
            </label>
            <div class="col-md-10">
                @Html.DropDownList("roomPackageID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.roomPackageID, "", new { @class = "text-danger" })
            </div>
    </div>

    <div class="form-group">
        <label class="col-md-2 control-label">
            Amenidad:
            </label>
            <div class="col-md-10">
                @Html.DropDownList("serviceID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.serviceID, "", new { @class = "text-danger" })
            </div>
    </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Agregar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action( "Index")'">Regresar</button>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
