@model IEnumerable<hotel.Models.RoomServicePackage>

@{
    ViewBag.Title = "Paquetes de servicio a la habitación";
}

<h2>Paquetes de servicio a la habitación</h2>

<p>
    <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action( "Create")'">Agregar</button>
</p>
<table class="table">
    <tr>
        <th>
            Nombre del paquete:
        </th>
        <th>
            Nombre del servicio:
        </th>
        <th></th>
    </tr>

    @foreach (var package in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelpackage => package.RoomPackage.namePackage)
            </td>
            <td>
                @Html.DisplayFor(modelpackage => package.Service.name)
            </td>
            <td>
                <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action( "Edit", new { id = package.roomServicePackageID })'">Editar</button>

            </td>
        </tr>
    }
</table>