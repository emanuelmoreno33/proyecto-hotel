@model hotel.Models.RoomAmenity

@{
    ViewBag.Title = "Editar Amenidad";
}

<h2>Editar Amenidad</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.amenityID)

        <div class="form-group">
            <label class="col-md-2 control-label">ID de la reservación:</label>
            <div class="col-md-10">
                @Html.DropDownList("reservationID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.reservationID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2 control-label">Amenidad:</label>
            <div class="col-md-10">
                @Html.DropDownList("serviceID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.serviceID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2 control-label">Fecha de reservación:</label>
                <div class="col-md-10">
                    @Model.date.ToString("dd 'de' MMMM 'del' yyyy a la hh:mm tt")
                    @Html.TextBoxFor(model => model.date, new { @class = "form-control", @type = "hidden", @value = Model.date, @readonly = "readonly" })
                    @Html.ValidationMessageFor(model => model.date, "", new { @class = "text-danger" })
                </div>
</div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Actualizar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action( "Index")'">Regresar</button>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
