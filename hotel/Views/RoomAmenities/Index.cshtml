@model IEnumerable<hotel.Models.RoomAmenity>

@{
    ViewBag.Title = "Amenidades Registradas";
}

<h2>Comodidades a la habitación</h2>

<p>
    <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action( "Create")'">Agregar</button>
</p>
<table class="table">
    <tr>
        <th>
            Fecha:
        </th>
        <th>
            ID de reservacón:
        </th>
        <th>
            Nombre de la comodidad:
        </th>
        <th></th>
    </tr>

    @foreach (var amenity in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelamenity => amenity.date)
            </td>
            <td>
                @Html.DisplayFor(modelamenity => amenity.Reservation.reservationID)
            </td>
            <td>
                @Html.DisplayFor(modelamenity => amenity.Service.name)
            </td>
            <td>

                <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action( "Edit", new { id = amenity.amenityID })'">Editar</button>
                <button type="button" class="btn btn-danger" onclick="location.href='@Url.Action( "Delete", new { id = amenity.amenityID })'">Eliminar</button>
            </td>
        </tr>
    }
</table>