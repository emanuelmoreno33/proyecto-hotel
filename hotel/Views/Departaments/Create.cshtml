@model hotel.Models.Departament

@{
    ViewBag.Title = "Agregar departamento";
}

<h2>Agregar departamento</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        <label class="col-md-2 control-label">Departamento:</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.type, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.type, "", new { @class = "text-danger" })
        </div>
    </div>



    <div class="form-group">
        <label class="col-md-2 control-label">Permisos de administrador:</label>
        <div class="col-md-10">
            <br />
            <input class="form-check-input" type="radio" name="admin" id="admin" value="0" checked>
            <label class="form-check-label" for="exampleRadios1">No</label>
            <br />
            <input class="form-check-input" type="radio" name="admin" id="admin" value="1" />
            <label class="form-check-label" for="exampleRadios1">Si</label>

        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Agregar" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action( "Index")'">Regresar</button>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
