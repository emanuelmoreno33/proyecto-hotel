@model IEnumerable<hotel.Models.AmenityReview>

@{
    ViewBag.Title = "Calificación de amenidades";
}

<h2>Reseña de comodidates</h2>

<p>
    <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action( "Create")'">Agregar</button>
</p>
<table class="table">
    <tr>
        <th>
            Calificación:
        </th>
        <th>
            Fecha de calificación:
        </th>
        <th>
            ID de Comodidad:
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.reviewAmenity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dataReview)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoomAmenity.Service.name)
            </td>
            <td>
            <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action( "Edit", new { id = item.reviewID })'">Editar</button>
            <button type="button" class="btn btn-danger" onclick="location.href='@Url.Action( "Delete", new { id = item.reviewID })'">Eliminar</button>
            </td>
        </tr>
    }

</table>