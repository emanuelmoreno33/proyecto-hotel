@model hotel.Models.AmenityReview

@{
    ViewBag.Title = "Agregar calificacion a amenidad";
}

    <h2>Agregar calificacion a amenidad</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="form-group">
            <label class="col-md-2 control-label">Calificación:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.reviewAmenity, new { htmlAttributes = new { @class = "form-control", @min=0, @max=5 } })
                @Html.ValidationMessageFor(model => model.reviewAmenity, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2 control-label">Fecha de calificación:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.dataReview, new { htmlAttributes = new { @class = "form-control", @type= "date" } })
                @Html.ValidationMessageFor(model => model.dataReview, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2 control-label">ID del registro de amenidad:</label>
            <div class="col-md-10">
                @Html.DropDownList("amenityID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.amenityID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Agregar" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action( "Index")'">Regresar</button>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
