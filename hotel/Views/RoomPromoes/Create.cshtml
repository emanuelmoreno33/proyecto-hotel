@model hotel.Models.RoomPromo

@{
    ViewBag.Title = "Promocion a un cuarto";
}

<h2>Asociar promocion a cuarto</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            
            <div class="col-md-10">
                <label>Promoción:</label>
                @Html.DropDownList("promoID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.promoID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            
            <div class="col-md-10">
                <label>Tipo de habitación:</label>
                @Html.DropDownList("roomTypeID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.roomTypeID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            
            <div class="col-md-10">
                <label>Descuento (ingrese el porcentaje):</label>
                @Html.EditorFor(model => model.discount, new { htmlAttributes = new { @class = "form-control", @type = "number", @max = 100, @min = 0,@placeholder="20% es 20" } })
                @Html.ValidationMessageFor(model => model.discount, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class=" col-md-10">
                <input type="submit" value="Agregar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
