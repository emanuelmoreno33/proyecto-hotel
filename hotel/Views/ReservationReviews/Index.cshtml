@model IEnumerable<hotel.Models.ReservationReview>

@{
    ViewBag.Title = "Index";
}

<h2>Reseñas de reservaciones</h2>

<p>
    @Html.ActionLink("Nueva reseña", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Habitación:
        </th>
        <th>
            Fecha de reseña:
        </th>
        <th>
            Tipo de Departamento:
        </th>
        <th>
            *ID de reservación:
        </th>
        <th></th>
    </tr>

    @foreach (var review in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelreview => review.reviewRoom)
            </td>
            <td>
                @Html.DisplayFor(modelreview => review.dateReview)
            </td>
            <td>
                @Html.DisplayFor(modelreview => review.Departament.type)
            </td>
            <td>
                @Html.DisplayFor(modelreview => review.Reservation.reservationID)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = review.reviewID }) |
                @Html.ActionLink("Details", "Details", new { id = review.reviewID }) |
                @Html.ActionLink("Delete", "Delete", new { id = review.reviewID })
            </td>
        </tr>
    }
</table>