@model hotel.Models.PlaceOfOrigin

@{
    ViewBag.Title = "Agregar Pais";
}

<h2>Agregar Pais</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <div class="col-md-10">
            <label class="col-2 control-label">ID de la ciudad (3 letras maximo basandose en el ISO 3166-1 alfa-3 ):</label>
        </div>
        <br />
        <div class="col-md-10">
            @Html.EditorFor(model => model.placeOfOrigin1, new { htmlAttributes = new { @class = "form-control", @maxlength = "3" } })
            @Html.ValidationMessageFor(model => model.placeOfOrigin1, "", new { @class = "text-danger" })
        </div>

    </div>

    <div class="form-group">
        <div class="col-md-10">
            <label class="col-2 control-label">Nombre del pais</label>
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.country, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.country, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class=" col-md-10">
                <input type="submit" value="Agregar" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action( "Index")'">Regresar</button>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
