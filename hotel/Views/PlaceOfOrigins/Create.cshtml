@model hotel.Models.PlaceOfOrigin

@{
    ViewBag.Title = "Agregar Pais";
}

<h2>Agregar Pais</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <div class="col-md-10">
            ID country (3 letters)
        </div>
        <br />
        <div class="col-md-10">
            @Html.EditorFor(model => model.placeOfOrigin1, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.placeOfOrigin1, "", new { @class = "text-danger" })
        </div>

    </div>

    <div class="form-group">
        <div class="col-md-10">
            Country
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.country, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.country, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class=" col-md-10">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
