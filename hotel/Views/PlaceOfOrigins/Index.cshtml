@model IEnumerable<hotel.Models.PlaceOfOrigin>

@{
    ViewBag.Title = "Lista de paises";
}

<h2>Países</h2>

<p>
    @Html.ActionLink("Agregar Nuevo Pais", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Codigo de país
        </th>
        <th>
            Nombre del pais
        </th>
        <th>Acciones</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.placeOfOrigin1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.country)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.placeOfOrigin1 }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.placeOfOrigin1 }) |
            @Html.ActionLink("Borrar", "Delete", new { id=item.placeOfOrigin1 })
        </td>
    </tr>
}

</table>
