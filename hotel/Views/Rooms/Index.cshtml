@model IEnumerable<hotel.Models.Room>

@{
    ViewBag.Title = "Index";
}

<h2>Lista de Habitaciones</h2>

<p>
    <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action( "Create")'">Agregar nueva habitación</button>
</p>
<table class="table">
    <tr>
        <th>
            Numero de Habitación:
        </th>
        <th>
            Estatus:
        </th>
        <th>
            Tipo de habitación:
        </th>
        <th></th>
    </tr>

    @foreach (var room in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelroom => room.roomNumber)
            </td>
            <td>
                @Html.DisplayFor(modelroom => room.RoomStatus.statusName)
            </td>
            <td>
                @Html.DisplayFor(modelroom => room.RoomType.typeName)
            </td>
            <td>
                <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action( "Edit", new { id = room.roomID })'">Editar</button>


            </td>
        </tr>
    }
</table>