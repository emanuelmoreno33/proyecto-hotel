@model IEnumerable<hotel.Models.RoomPackage>

@{
    ViewBag.Title = "Index";
}

<h2>Paquetes de habitacinoes</h2>

<p>
    @Html.ActionLink("Nuevo Paquete", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.namePackage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.frequency)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RoomType.typeName)
        </th>
        <th></th>
    </tr>

    @foreach (var package in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelpackage => package.namePackage)
            </td>
            <td>
                @Html.DisplayFor(modelpackage => package.price)
            </td>
            <td>
                @Html.DisplayFor(modelpackage => package.frequency)
            </td>
            <td>
                @Html.DisplayFor(modelpackage => package.RoomType.typeName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = package.roomPackageID }) |
                @Html.ActionLink("Details", "Details", new { id = package.roomPackageID }) |
                @Html.ActionLink("Delete", "Delete", new { id = package.roomPackageID })
            </td>
        </tr>
    }
</table>