@model IEnumerable<hotel.Models.RoomStatus>

@{
    ViewBag.Title = "Index";
}

<h2>Estatus de Habitaciones</h2>

<p>
    @Html.ActionLink("Nuevo Estatus", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Nombre del Estatus:
        </th>
        <th></th>
    </tr>

    @foreach (var status in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelstatus => status.statusName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = status.roomStatusID }) |
                @Html.ActionLink("Details", "Details", new { id = status.roomStatusID }) |
                @Html.ActionLink("Delete", "Delete", new { id = status.roomStatusID })
            </td>
        </tr>
    }
</table>